<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:id="@+id/ll_prefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_text">

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="Enviar" />

            <Button
                android:id="@+id/btnPrefs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="Preferences" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttons1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_prefs"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="Compartir" />

            <Button
                android:id="@+id/btnMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="E-mail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_buttons1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWeb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="Obrir Web" />

            <Button
                android:id="@+id/btnMaps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="Obrir Maps" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_buttons2"
            android:text="Mostrar Times"/>


    </RelativeLayout>
</ScrollView>