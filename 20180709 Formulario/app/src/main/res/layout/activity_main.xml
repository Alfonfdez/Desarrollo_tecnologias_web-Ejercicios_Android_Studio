<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/perro"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/perro"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/perro"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/nom"
            android:drawableLeft="@drawable/profile"/>

        <EditText
            android:id="@+id/profile"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/perro"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:hint="@string/escribe_nom"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/correo"
            android:drawableLeft="@drawable/email"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:hint="@string/escribe_correo"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/tlfno"
            android:drawableLeft="@drawable/phone"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:hint="@string/escribe_tlfno"
            android:inputType="phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/password"
            android:drawableLeft="@drawable/lock"/>

        <EditText
            android:id="@+id/lock"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:hint="@string/escribe_password"
            android:inputType="textPassword"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lock"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/date"
            android:drawableLeft="@drawable/date"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lock"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:hint="@string/escribe_fecha"
            android:inputType="phone" />

        <Button
            android:id="@+id/guardar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/date"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:background="@color/green"
            android:hint="@string/guardar"
            android:textColorHint="@color/white"/>

        <Button
            android:id="@+id/borrar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/date"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            android:background="@color/red"
            android:hint="@string/borrar"
            android:textColorHint="@color/white"/>


    </RelativeLayout>


</ScrollView>