<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="#2631FF"
        android:text="Título"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="381dp"
        android:layout_height="69dp"
        android:layout_below="@+id/textview1"
        android:layout_marginTop="20dp"
        android:text="Introduce tu nombre"
        android:textAlignment="inherit"
        android:textColor="#727578"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editexto"
        android:layout_width="382dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/textview2"
        android:drawableLeft="@drawable/profile"
        android:drawablePadding="16dp"
        android:hint="Nombre aquí" />

    <CheckBox
        android:id="@+id/chk_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editexto"
        android:layout_marginTop="20dp"
        android:text="Texto del checkbox"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="381dp"
        android:layout_height="69dp"
        android:layout_below="@+id/chk_select"
        android:layout_marginTop="20dp"
        android:text="¡Hola!, ¿qué tal el día?"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/dog"
        android:layout_width="166dp"
        android:layout_height="126dp"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dog" />

    <Button
        android:id="@+id/btnaceptar"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btncancelar"
        android:layout_marginStart="29dp"
        android:text="ACEPTAR"
        android:background="@android:color/holo_green_light"
        android:textColor="#fff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="447dp" />

    <Button
        android:id="@+id/btncancelar"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="19dp"
        android:text="CANCELAR"
        android:background="@android:color/holo_red_light"
        android:textColor="#fff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="447dp" />





</RelativeLayout>